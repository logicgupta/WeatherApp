<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView1"
        android:text=""
        android:drawableLeft="@mipmap/london"
        android:background="@drawable/main"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_height="46dp"
        android:layout_margin="4dp"/>
    <TextView
        android:id="@+id/textView2"
        android:drawableLeft="@mipmap/desc"
        android:background="@drawable/main"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:layout_height="46dp" />
    <TextView
        android:id="@+id/textView3"
        android:drawableLeft="@mipmap/thermometer"
        android:layout_width="match_parent"
        android:padding="12dp"
        android:background="@drawable/main"
        android:layout_margin="4dp"
        android:layout_height="46dp" />
    <TextView
        android:id="@+id/textView4"
        android:drawableLeft="@mipmap/thermometer2"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="12dp"
        android:background="@drawable/main"
        android:layout_height="46dp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="12dp"
        android:drawableLeft="@mipmap/humidity"
        android:background="@drawable/main"
        android:layout_height="46dp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:padding="12dp"
        android:drawableLeft="@mipmap/pressure"
        android:background="@drawable/main"
        android:layout_height="46dp" />





</LinearLayout>